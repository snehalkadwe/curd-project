<%- include('../partials/header') %>

    <form action="/products/update/<%= product[0].id %>" method="post" name="form1">
        <div class="form-group">
        <label for="name">Product Name</label>
        <input type="text" class="form-control" name="name" id="name" value="<%= product[0].pname %>" placeholder="Product Name">
        </div>
        <div class="form-group">
        <label for="price">Price</label>
        <input type="text" class="form-control" name="price" class="form-control" id="price" placeholder="Enter price" value="<%= product[0].price %>">
        </div>
        <button type="submit" class="btn btn-info">Update</button>
    </form>
<%- include('../partials/footer') %>